@using MVCTask.Entities
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer localizer
@model Person
@{
    ViewData["Title"] = @localizer["Person"];
}

<h1>@Model.Name @Model.LastName</h1>

<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input id="id" type="hidden" asp-for="PersonId" />
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" readonly />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
        </form>
        <div class="fc-button-group">
            <a asp-action="Edit" asp-route-id="@Model.PersonId" class="btn-w150 btn btn-primary">
                <i class="fa fa-edit bg-primary"></i>
                @localizer["Edit"]
            </a> |
            <a asp-action="Delete" asp-route-id="@Model.PersonId" class="btn-w150 btn btn-danger">
                <i class="fa fa-trash-alt bg-danger"></i>
                @localizer["Delete"]
            </a> |
            <a asp-action="InfoAddress" asp-route-personId="@Model.PersonId" class="btn-w150 btn btn-success">
                <i class="fa fa-home bg-success"></i>                
                @localizer["Address"]
            </a> |
            <a asp-controller="home" asp-action="Index">@localizer["Back"]</a>

        </div>
    </div>

</div>
